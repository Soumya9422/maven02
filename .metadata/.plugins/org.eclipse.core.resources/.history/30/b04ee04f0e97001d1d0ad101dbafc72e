package test;

import java.util.Scanner;

public class palendrom {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int a ,b,c,d;
		b=0;
		d=0;
		//c=a;
		Scanner cs = new Scanner(System.in);
		System.out.println("Enter a number to check for palendrom :");
		a = cs.nextInt();
		c = a ;
		while(c>0)
		{
		b = a%10;
		c=a/10;
		d = (d*10)+b;
		}
		if (a==d)
		{
			System.out.println("its a palandrom number");
		}
		else
		{
			System.out.println("its not a palandram numbr");
		}

	}

}
