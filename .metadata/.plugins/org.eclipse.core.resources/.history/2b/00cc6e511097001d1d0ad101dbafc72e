package test;

import java.util.Scanner;

public class palendrom {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int b,c,d;
		//b=0;
		d=0;
		//c=a;
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter a number to check for palendrom :");
		int a1= sc.nextInt();  
		c = a1 ;
		while(c>0)
		{
		b = a1%10;
		c = a1/10;
		d = (d*10)+b;
		}
		if (a1==d)
		{
			System.out.println("its a palandrom number");
		}
		else
		{
			System.out.println("its not a palandram numbr");
		}

	}

}
